opm.configure() {
    opm.util.requires_dir ${BUILDDIR}

    msg "Configuring source ..."
    cd "$BUILDDIR";

    [ -e ${SOURCEDIR}/configure ] && try ${SOURCEDIR}/configure \
        --prefix=${CONFIG_PREFIX}   \
        --with-sysroot=$LFS         \
        --with-lib-path=/tools/lib  \
        --target=${CONFIG_TARGET}   \
        --disable-nls               \
        --disable-werror
}
