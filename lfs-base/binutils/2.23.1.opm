opm.configure() {
    msg "Configuring source ..."
    cd "$SOURCEDIR";

    [ -e ./configure ] && try ./configure \
        --prefix=${CONF_PREFIX}    \
        --with-sysroot=$LFS        \
        --with-lib-path=/tools/lib \
        --target=$LFS_TGT          \
        --disable-nls              \
        --disable-werror
}
