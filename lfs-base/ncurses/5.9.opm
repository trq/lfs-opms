opm.configure() {
    opm.stage.start "configure"
    opm.stage.requires "prepare"
    opm.util.requires_dir ${BUILDDIR}

    msg "Configuring source ..."
    cd "$BUILDDIR";

    opm.util.configure \
        --with-shared                   \
        --without-debug                 \
        --without-ada                   \
        --enable-overwrite

    opm.stage.complete "configure"
}
