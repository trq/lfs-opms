opm.configure() {
    opm.util.requires_stage "prepare"
    opm.util.requires_dir ${BUILDDIR}

    msg "Configuring source ..."
    cd "$BUILDDIR";

    opm.util.configure \
        --prefix=${CONFIG_PREFIX:=/usr}                 \
        --host=${CONFIG_TARGET}                         \
        --build=$(${SOURCEDIR}/scripts/config.guess)    \
        --disable-profile                               \
        --enable-kernel=2.6.25                          \
        --with-headers=${CONFIG_PREFIX:=/usr}/include   \
        libc_cv_forced_unwind=yes                       \
        libc_cv_ctors_header=yes                        \
        libc_cv_c_cleanup=yes

    opm.util.complate_stage "configure"
}

opm.postinstall() {
    opm.util.requires_stage "install"

    msg "Testing Toolchain ..."
    cd "$BUILDDIR";

    echo 'main(){}' > dummy.c
    ${CONFIG_TARGET}-gcc dummy.c
    readelf -l a.out | grep ': /tools'
    rm -v dummy.c a.out

    opm.util.complete_stage "postinstall"
}
